<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_partner_form_inherit_supplier" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.supplier</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Insert the Vendor checkbox in the Purchase group -->
            <xpath expr="//group[@name='purchase']" position="inside">
                <field name="supplier_rank" string="Vendor"/>
            </xpath>
        </field>
    </record>
</odoo>
