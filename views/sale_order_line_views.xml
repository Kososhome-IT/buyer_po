<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extend the Sale Order Form: add product image in order_line tree -->
    <record id="view_order_form_inherit_image" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.image</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="product_image" widget="image" options="{'size': [32, 32]}"/>
                <field name="buyer_style_no" />
                <field name="vendor_id"/>
            </xpath>
        </field>
    </record>

    <!-- Also extend Sale Order Line readonly form for popup views -->
    <record id="sale_order_line_view_form_inherit_image" model="ir.ui.view">
        <field name="name">sale.order.line.form.inherit.image</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="product_image" widget="image" options="{'size': [64, 64]}"/>
            </xpath>
        </field>
    </record>

</odoo>
